.category-wrapper{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 26rpx 60rpx 10rpx 20rpx;
  background-color: rgb(51, 154, 221);
}
.category-item{
  position: relative;
  padding-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.6;
  color: rgb(175, 237, 255);
}
.category-item:hover{
  opacity: 1;
}
.category-item:hover::after{
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 4rpx;
  /* transform: translateX(50%); */
  background-color:  rgb(175, 237, 255);
}
.top-wrapper{
  position: relative;
  display: block;
  width: 752rpx;
  height: 360rpx;
  margin: 20rpx auto;
}
.top-content{
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  width: 80%;
  color: white;
}
.top-title{
  font-size: 30rpx;
  line-height: 42rpx;
}
.top-source,.top-date{
  font-size: 20rpx;
  line-height: 28rpx;
  opacity: 0.6;
}
.top-image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.news-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 36rpx;
}
.news-content{
  width: 466rpx;
}
.news-title{
  font-size: 30rpx;
  line-height: 42rpx;
}
.news-source{
  font-size: 20rpx;
  line-height: 28rpx;
}
.news-date{
  margin-left: 20rpx;
  font-size: 20rpx;
  line-height: 28rpx;
}
.news-image{
  width: 176rpx;
  height: 120rpx;
}
